#!/bin/bash

required_env_vars=(
    "CLOUDFLARE_ACCOUNT_ID"
    "CLOUDFLARE_AUTH_TOKEN"
)

missing_vars=0

for var in "${required_env_vars[@]}"; do
    if [[ -z ${!var} ]]; then
        echo "Error: The environment variable '$var' is not set."
        missing_vars=1
    fi
done

# Exit if any variable is missing
if [[ ${missing_vars} -eq 1 ]]; then
    echo "Please set the missing environment variables and try again."
    exit 1
fi

declare -a llamachat_messages
if [ -f /tmp/llamachat_messages ]; then
  llamachat_messages=()
  while IFS= read -r line; do
    llamachat_messages+=("$line")
  done < /tmp/llamachat_messages
else
  llamachat_messages=()
fi

model="@cf/meta/llama-4-scout-17b-16e-instruct"
temperature=0.7

# Processar argumentos
while [[ $# -gt 0 ]]; do
  case $1 in
    --model)
      model="$2"
      shift 2
      ;;
    *)
      message="${message:+$message }$1"
      shift
      ;;
  esac
done

if [ -z "$message" ]; then
  echo "Usage: lmchat [--model model-name] your message"
  exit 1
fi

llamachat_messages+=("{\"role\": \"user\", \"content\": \"$message\"}")

messages_json=$(printf "%s," "${llamachat_messages[@]}")
messages_json="[${messages_json%,}]"

temp_response_file=$(mktemp)

# Executar curl e capturar saída completa (incluindo erros)
curl_output=$(curl -s -N "https://api.cloudflare.com/client/v4/accounts/$CLOUDFLARE_ACCOUNT_ID/ai/run/$model" \
  -X POST \
  -H "Authorization: Bearer $CLOUDFLARE_AUTH_TOKEN" \
  -H "Content-Type: application/json" \
  -d '{
    "messages": '"$messages_json"',
    "temperature": '"$temperature"',
    "stream": true
  }' 2>&1)

# Verificar se há erro na resposta
if echo "$curl_output" | jq -e '.error' >/dev/null 2>&1; then
  error_msg=$(echo "$curl_output" | jq -r '.error.message // "Erro desconhecido no endpoint"')
  echo "Erro do endpoint: $error_msg" >&2
  rm -f "$temp_response_file"
  exit 1
fi

# Processar streaming se não houver erro
echo "$curl_output" | while read -r line; do
  if [[ $line == data:* ]]; then
    content=$(echo "${line#data: }" | jq -r '.response // empty' 2>/dev/null)
    if [ ! -z "$content" ]; then
      echo -n "$content"
      echo -n "$content" >> "$temp_response_file"
    fi
  fi
done

echo # Nova linha ao final da resposta

response=$(<"$temp_response_file")
rm "$temp_response_file"

if [ -z "$response" ]; then
  echo "Nenhuma resposta recebida do LLM." >&2
  exit 1
fi

json_message_escape() {
  echo -n "$1" | jq -s -R -r @json
}

llamachat_messages+=("{\"role\": \"assistant\", \"content\": $(json_message_escape "$response")}")
printf '%s\n' "${llamachat_messages[@]}" > /tmp/llamachat_messages
